       </div>
       
       <!-- should make a grid , display the store cards -->
       
       <div class="store-cards">

        <% stores.forEach( (store)=>{ %>
           <div class="store-card">
               <img src="<%= store.image %>">
               <h4><%= store.name %></h4>
               <p>RP.<%= store.price %></p>

               <a href="/store/<%= store._id %>" class="btn btn-secondary">more info</a>
           </div>
        <% } ) %>

       </div>
      
    </div>

</div>

